# Dialogflow settings - DEPRECATED
# Dialogflow integration has been replaced by direct Telegram bot integration
# These settings are no longer used but kept for backward compatibility
# DIALOGFLOW_PROJECT_ID="your-dialogflow-project-id"
# DIALOGFLOW_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
# DIALOGFLOW_CLIENT_EMAIL="your-dialogflow-client-email"

# Ollama settings (Local LLM Model)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2:1b

# API keys for data sources
NEWS_API_KEY=your_news_api_key_here
ECONOMIC_DATA_API_KEY=your_economic_api_key_here

# Cache settings
CACHE_TTL=3600  # seconds

# Telegram Bot settings
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# DeepSeek Cloud Model Settings (Optional - Alternative to Ollama)
USE_DEEPSEEK=false
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat  # or deepseek-coder for coding tasks
